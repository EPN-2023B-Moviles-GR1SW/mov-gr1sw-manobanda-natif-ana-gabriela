<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccesoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="407dp"
        android:layout_height="68dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Acceso"
        app:titleMarginStart="20dp"
        app:titleTextColor="@color/white" />

    <EditText
        android:id="@+id/pt_ma_correo"
        android:layout_width="322dp"
        android:layout_height="52dp"
        android:layout_marginBottom="84dp"
        android:ems="10"
        android:hint="Correo Electr칩nico"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/p_ma_passw"
        app:layout_constraintEnd_toEndOf="@+id/p_ma_passw"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/p_ma_passw" />

    <EditText
        android:id="@+id/p_ma_passw"
        android:layout_width="316dp"
        android:layout_height="50dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:hint="Contrase침a"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/btn_ma_ingresar"
        app:layout_constraintEnd_toEndOf="@+id/btn_ma_ingresar"
        app:layout_constraintStart_toStartOf="@+id/btn_ma_ingresar" />

    <TextView
        android:id="@+id/tv_ma_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="12dp"
        android:text="Correo electr칩nico:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/pt_ma_correo"
        app:layout_constraintEnd_toEndOf="@+id/pt_ma_correo" />

    <TextView
        android:id="@+id/tv_ma_passw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Contrase침a:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/p_ma_passw"
        app:layout_constraintEnd_toEndOf="@+id/p_ma_passw"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/p_ma_passw" />

    <Button
        android:id="@+id/btn_ma_ingresar"
        android:layout_width="166dp"
        android:layout_height="50dp"
        android:layout_marginBottom="296dp"
        android:text="Ingresar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_ma_regist"
        android:layout_width="169dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:text="Registrarse"
        app:layout_constraintEnd_toEndOf="@+id/btn_ma_ingresar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_ma_ingresar"
        app:layout_constraintTop_toBottomOf="@+id/btn_ma_ingresar" />

</androidx.constraintlayout.widget.ConstraintLayout>