<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_Prod"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProdActivity">


    <Button
        android:id="@+id/btn_crearProducto"
        android:layout_width="148dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:text="Crear"
        app:layout_constraintEnd_toEndOf="@+id/lv_productos"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/lv_productos"
        app:layout_constraintTop_toBottomOf="@+id/lv_productos" />

    <TextView
        android:id="@+id/tv_tiendaSelected"
        android:layout_width="312dp"
        android:layout_height="62dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="TIENDA"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <ListView
        android:id="@+id/lv_productos"
        android:layout_width="327dp"
        android:layout_height="403dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_tiendaSelected"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="@+id/tv_tiendaSelected"
        app:layout_constraintTop_toBottomOf="@+id/tv_tiendaSelected" />

</androidx.constraintlayout.widget.ConstraintLayout>