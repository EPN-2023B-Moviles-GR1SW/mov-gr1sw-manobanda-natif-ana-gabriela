<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="145dp"
        android:layout_height="43dp"
        android:layout_marginBottom="72dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Tiendas"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/lv_tiendas"
        app:layout_constraintEnd_toEndOf="@+id/lv_tiendas"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lv_tiendas" />

    <Button
        android:id="@+id/btn_crear_tienda"
        android:layout_width="147dp"
        android:layout_height="53dp"
        android:layout_marginStart="36dp"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <ListView
        android:id="@+id/lv_tiendas"
        android:layout_width="316dp"
        android:layout_height="394dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.596" />

</androidx.constraintlayout.widget.ConstraintLayout>